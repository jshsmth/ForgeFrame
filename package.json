{
  "name": "forgeframe",
  "version": "1.0.0",
  "description": "Modern cross-domain iframe component framework - a TypeScript alternative to zoid",
  "type": "module",
  "module": "./dist/forgeframe.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/forgeframe.js"
    }
  },
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "dev:parent": "vite --config vite.config.parent.ts",
    "dev:child": "vite --config vite.config.child.ts",
    "dev:playground": "concurrently \"npm run dev:parent\" \"npm run dev:child\"",
    "build": "vite build && tsc --emitDeclarationOnly",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "release": "npm run build && npm publish",
    "release:patch": "npm version patch && npm run release && git push && git push --tags",
    "release:minor": "npm version minor && npm run release && git push && git push --tags",
    "release:major": "npm version major && npm run release && git push && git push --tags"
  },
  "keywords": [
    "iframe",
    "cross-domain",
    "component",
    "zoid",
    "postmessage",
    "popup",
    "embed"
  ],
  "author": "Josh Smith",
  "license": "MIT",
  "homepage": "https://github.com/jshsmth/ForgeFrame#readme",
  "bugs": {
    "url": "https://github.com/jshsmth/ForgeFrame/issues"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^3.1.0",
    "concurrently": "^9.1.2",
    "jsdom": "^27.4.0",
    "typescript": "~5.9.3",
    "vite": "^7.2.4",
    "vite-plugin-mkcert": "^1.17.9",
    "vitest": "^3.1.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jshsmth/ForgeFrame.git"
  }
}
